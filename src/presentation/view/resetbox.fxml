<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>

<StackPane xmlns="http://javafx.com/javafx/19"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="presentation.controllers.ResetDialogController"
           alignment="CENTER"
           style="-fx-background-color: rgba(0, 0, 0, 0.6);">

    <VBox alignment="CENTER"
          spacing="20"
          maxWidth="340" maxHeight="260"
          prefWidth="340" prefHeight="260"
          style="-fx-background-color: linear-gradient(to bottom, rgba(25, 15, 45, 0.98), rgba(15, 8, 30, 0.98));
                 -fx-border-color: linear-gradient(to right, #4ECDC4, #FF6B9D);
                 -fx-border-width: 2;
                 -fx-background-radius: 20;
                 -fx-border-radius: 20;
                 -fx-effect: dropshadow(gaussian, rgba(78, 205, 196, 0.3), 30, 0, 0, 0);">

        <padding>
            <Insets top="28" bottom="25" left="30" right="30"/>
        </padding>

        <StackPane>
            <Circle radius="28"
                    style="-fx-fill: rgba(255, 107, 157, 0.15);
                           -fx-stroke: #FF6B9D;
                           -fx-stroke-width: 2;"/>
            <Label text="âš "
                   style="-fx-font-size: 32;
                          -fx-text-fill: #FF6B9D;"/>
        </StackPane>

        <Label text="Reset Game?"
               style="-fx-font-size: 23;
                      -fx-font-weight: 900;
                      -fx-text-fill: white;
                      -fx-effect: dropshadow(gaussian, rgba(255, 107, 157, 0.4), 8, 0, 0, 0);"/>

        <VBox alignment="CENTER" spacing="5">
            <Label text="All your progress will be lost."
                   textAlignment="CENTER"
                   style="-fx-font-size: 15;
                          -fx-text-fill: rgba(255, 255, 255, 0.9);"/>
            <Label text="Are you sure you want to continue?"
                   textAlignment="CENTER"
                   style="-fx-font-size: 15;
                          -fx-text-fill: rgba(255, 255, 255, 0.9);"/>
        </VBox>

        <HBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="10"/>
            </padding>

            <Button fx:id="cancelButton"
                    text="Cancel"
                    prefWidth="135" prefHeight="45"
                    onAction="#handleCancel"
                    style="-fx-background-color: rgba(255, 255, 255, 0.08);
                           -fx-border-color: rgba(78, 205, 196, 0.5);
                           -fx-border-width: 2;
                           -fx-border-radius: 12;
                           -fx-background-radius: 12;
                           -fx-text-fill: white;
                           -fx-font-size: 16;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;"/>

            <Button fx:id="resetButton"
                    text="Reset"
                    prefWidth="135" prefHeight="45"
                    onAction="#handleReset"
                    style="-fx-background-color: linear-gradient(to right, #FF6B9D, #FF4757);
                           -fx-border-color: transparent;
                           -fx-background-radius: 12;
                           -fx-text-fill: white;
                           -fx-font-size: 16;
                           -fx-font-weight: bold;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(255, 107, 157, 0.4), 10, 0, 0, 0);"/>
        </HBox>

    </VBox>

</StackPane>